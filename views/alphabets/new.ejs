<%- include('../partials/header'); -%>
<div class="container">

    <div class="row">
        <div style="width: 30%; margin: 50px auto;">
            <h4 style="text-align: center"><strong>Create a New Alphabet</strong></h1>
                <form action="/alphabets" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="name" placeholder="name"> </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="image" placeholder="image url"> </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="description" placeholder="description"> </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit!</button> </div>
                </form>
                <a href="/alphabets">Go Back</a>
        </div>
    </div>
</div>

