<%- include('../partials/header'); -%>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to Alphabet Learning</h1>
            <p>View our hand-picked alphabet from all over the world</p>
            <p><a class="btn btn-primary btn-lg" href="/newalphabet">Add New Alphabet to Project</a></p>
        </div>
    </header>

    <div class="row text-center" style="display:flex; flex-wrap:wrap;">
        <% Alpha.forEach((alphabet)=>{ %>
        <div class="col-md-3 col-sm-6">
            <div class="img-thumbnail">
                <img src='<%= alphabet.image %>' height="135" width="240" />
                <div class="caption">
                    <h4> <%= alphabet.name %></h1><br>
                </div>
                <p><a href="/alphabets/<%= alphabet._id %>" class="btn btn-primary">More Info..</a></p>
            </div>
        </div>
        <% }) %>
    </div>
</div>
<%- include('../partials/footer'); -%>