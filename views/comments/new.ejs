<%- include('../partials/header'); -%>
<div class="container">

    <div class="row">
        <div style="width: 30%; margin: 50px auto;">
            <h4 style="text-align: center"><strong>Add a New Comment to <br/> <%= alphabet.name %> </strong></h4>
                <form action="/alphabets/<%= alphabet._id %>/comments" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="comment[text]" placeholder="text"> </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="comment[author]" placeholder="author"> </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit!</button> </div>
                </form>
                <a href="../">Go Back</a>
        </div>
    </div>
</div>

<%- include('../partials/footer'); -%>